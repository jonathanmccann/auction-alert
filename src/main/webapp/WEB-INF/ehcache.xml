<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
	updateCheck="false">

	<!-- CategoriesDAO -->

	<cache eternal="true" maxEntriesLocalHeap="1000" name="parentCategories" />
	<cache eternal="true" maxEntriesLocalHeap="1000" name="subcategories" />

	<!-- SearchQueryDAO -->

	<cache eternal="false" maxEntriesLocalHeap="100" memoryStoreEvictionPolicy="LFU" name="searchQueries" timeToIdleSeconds="300" timeToLiveSeconds="600" />

	<!-- UserDAO -->

	<cache eternal="false" maxEntriesLocalHeap="100" memoryStoreEvictionPolicy="LFU" name="userByUserId" timeToIdleSeconds="300" timeToLiveSeconds="600" />
	<cache eternal="false" maxEntriesLocalHeap="2" memoryStoreEvictionPolicy="LFU" name="userIds" timeToIdleSeconds="300" timeToLiveSeconds="600" />
</ehcache>